<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="list-group text-center">
        <%= link_to "Timeline", timeline_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Popular", popular_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "New", posts_new_posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Search", posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Create post", new_post_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Your favorite posts", posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Your posts", posts_path, class: "list-group-item list-group-item-action" %>
      </div>
    </div>
    <div class="col offset-1">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Your info</h3>
          <% if @post.errors.any? %>
            <div class="error_message">
              <%= @post.errors.count %>件のエラーがあります：
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          <% end %>
          <%= form_with model: @end_user, local: true do |f| %>
            <%= f.attachment_field :profile_image %>
            <br><br>
            <label for="inputEndUserName">ユーザーネーム</label>
            <%= f.text_field :name, autofocus: true, id: "inputEndUserName", class: "form-control" %>
            <br>
            <label for="inputEmail">メールアドレス</label>
            <%= f.text_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>
            <br>
            <%= f.submit "編集", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>