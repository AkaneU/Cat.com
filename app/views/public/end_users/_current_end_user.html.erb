<% if flash[:notice] %>
  <p class="text-center"><%= flash[:notice] %></p>
<% end %>
<ur class="nav nav-tabs">
  <%= link_to "Info", end_user_path(end_user), class: "nav-link active" %>
  <div class="nav-link">
    <%= link_to "Notice", notifications_path %>
    <% if unchecked_notifications.any? %>
      <div class="badge bg-info text-light">
        <%= unchecked_notifications.count %>
      </div>
    <% end %>
  </div>
</ur>
<br>
<div class="card">
  <div class="card-body">
    <h3 class="card-title">Your info</h3>
  </div>
  <div class="row">
    <div class="col-3 offset-1">
      <%= attachment_image_tag end_user, :profile_image, fallback: "no_image.jpg", class: "circle"%>
      <br>
      <%= link_to end_user_followings_path(end_user.id) do %>
        <%= end_user.followings.count %> follows
      <% end %>
      <br>
      <%= link_to end_user_followers_path(end_user.id) do %>
        <%= end_user.followers.count %> followers
      <% end %>
    </div>
    <div class="col-7">
      <table class="table-borderless">
        <tbody>
          <tr>
            <th>Username</th>
            <th><%= end_user.name %></th>
          </tr>
          <tr>
            <th>Email</th>
            <th><%= end_user.email %></th>
          </tr>
          <tr>
            <th><%= link_to "ユーザー情報編集", edit_end_user_path(@end_user), class: "btn btn-secondary" %></th>
          </tr>
          <tr>
            <th><%= link_to "アカウント削除", check_path, class: "btn btn-danger" %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>