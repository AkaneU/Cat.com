<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="list-group text-center">
        <%= link_to "Timeline", timeline_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Popular", popular_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "New", posts_new_posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Search", posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Create post", new_post_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Your favorite posts", posts_favorited_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Your posts", posts_path, class: "list-group-item list-group-item-action" %>
      </div>
    </div>
    <div class="col offset-1">
      <div class="card">
        <div class="row g-0">
          <div class="col-8">
            <% @post.image_files.each do |image| %>
              <%= attachment_image_tag image, :image, size: "500x450" %>
            <% end %>
          </div>
          <div class="col-4">
            <div class="card-body">
              <div class="card-title">
                <%= link_to end_user_path(@post.end_user) do %>
                  <%= attachment_image_tag @post.end_user, :profile_image, width: "30%", heigth: "30%", fallback: "no_image.jpg", class: "circle"%>
                <% end %>
                <%= @post.end_user.name %>
              </div>
              <div class="row">
                <%= @post.text %>
              </div>
              <div class="row">
                <% @post.tag_list.each do |tag| %>
                  <%= link_to posts_path(tag) do %>
                    #<%= tag %>
                  <% end %>
                   &nbsp;
                <% end %>
              </div>
              <div class="row">
                <div class="col-auto" id="favorite_btn_<%= @post.id %>">
                  <%= render "favorites/favorite_btn", post: @post %>
                </div>
                <div class="col">
                  <%= @post.created_at.strftime("%Y/%m/%d") %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
      <%= form_with model:[@post, @post_comment], local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :comment, class: "form-control" %>
          <%= f.submit "コメントする", class: "btn btn-success" %>
        </div>
      <% end %>
      <br>
      <div class="card">
        <div class="card-header">コメント (<%= @post.post_comments.count %>)</div>
        <div class="card-body">
          <% if @post.post_comments.blank? %>
            <p class="text-center">コメントはありません</p>
          <% else %>
            <% @post.post_comments.each do |post_comment| %>
              <tbody>
                <tr>
                  <td>
                    <%= link_to end_user_path(post_comment.end_user_id) do %>
                      <%= attachment_image_tag post_comment.end_user.profile_image, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40", class: "circle" %>
                    <% end %>
                  </td>
                  <td>
                    <%= post_comment.comment %>
                  </td>
                  <% if post_comment.end_user == current_end_user %>
                    <td>
                      <%= link_to "Destroy", post_post_comment_path(@post, post_comment), method: :delete, local: true, class: "btn btn-danger" %>
                    </td>
                  <% end %>
                  <td>
                    <%= post_comment.created_at.strftime("%Y/%m/%d") %>
                  </td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
