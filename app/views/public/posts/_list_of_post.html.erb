<div class="card">
  <% @posts.each do |post| %>
    <% post.image_files.first(1).each do |image| %>
      <%= attachment_image_tag image, :image, size: "550x450", class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post.end_user, :profile_image,ã€€width: "70%", height: "70%", fallback: "no_image.jpg", class: "circle"%>
        </div>
        <div class="col-3">
          <%= post.end_user.name %>
          <br>
          <%= post.created_at.strftime("%Y/%m/%d") %>
        </div>
        <div class="col offset-1">
          <%= post.title %>
          <br>
          <%= post.text %>
          <%= link_to "...", post_path(post), class: "" %>
        </div>
      </div>
    </div>
  <% end %>
</div>