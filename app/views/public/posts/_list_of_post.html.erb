<% posts.each do |post| %>
  <div class="card">
    <% post.image_files.first(1).each do |image| %>
      <%= attachment_image_tag image, :image, size: "550x450", class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post.end_user, :profile_image, size: "60x60", fallback: "no_image.jpg", class: "circle" %>
        </div>
        <div class="col-3">
          <%= post.end_user.name %>
          <br>
          <%= post.created_at.strftime("%Y/%m/%d") %>
        </div>
        <div class="col offset-1">
          <%= post.title %>
          <br>
          <%= post.text.truncate(100) %>
          <%= link_to "see detail", post_path(post) %>
        </div>
      </div>
    </div>
  </div>
  <br>
<% end %>

