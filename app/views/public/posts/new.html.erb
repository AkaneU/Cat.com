<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="list-group text-center">
        <%= link_to "Timeline", timeline_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Popular", popular_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "New", posts_new_posts_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Search", search_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Create post", new_post_path, class: "list-group-item list-group-item-action active" %>
        <%= link_to "Your favorite posts", posts_favorited_path, class: "list-group-item list-group-item-action" %>
        <%= link_to "Your posts", posts_path, class: "list-group-item list-group-item-action" %>
      </div>
    </div>
    <div class="col offset-1">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">New post</h3>
          <% if @post.errors.any? %>
            <div class="error_message">
              <%= @post.errors.count %>件のエラーがあります：
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          <% end %>
          <!--画像は複数アップロードを許可-->
          <%= form_with model:@post, local: true do |f| %>
            <%= f.attachment_field :image_files_images, multiple: true %>
            <br><br>
            <label for="inputTitle">タイトル</label>
            <%= f.text_field :title, autofocus: true, placeholder: "最大50文字", id: "inputTitle", class: "form-control" %>
            <br>
            <label for="inputText">詳細文</label>
            <%= f.text_area :text, autofocus: true, placeholder: "最大200文字", id: "inputText", class: "form-control" %>
            <br>
            <label for="inputTag">タグ</label>
            <%= f.text_field :tag_list, placeholder: "カンマで区切る事で複数のタグが登録できます", value: @post.tag_list.join(','), autofocus: true, id: "inputTag", class: "form-control" %>
            <br>
            <%= f.submit "投稿", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>