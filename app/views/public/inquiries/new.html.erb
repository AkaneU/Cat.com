<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Contact us</h3>
          <%= form_with model:@inquiry, url: confirm_path, local: true do |f| %>
            <label for="inputName">お名前</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
            <br>
            <label for="inputEmail">メールアドレス</label>
            <%= f.text_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>
            <br>
            <label for="inputTitle">お問い合わせタイトル</label>
            <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "form-control" %>
            <br>
            <label for="inputText">お問い合わせ内容</label>
            <%= f.text_area :text, autofocus: true, id: "inputText", class: "form-control" %>
            <br>
            <%= f.submit "確認", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>