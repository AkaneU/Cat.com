<% visitor = notification.visitor %>
<% post = notification.post %>

<table class="table table-sm">
  <tbody>
    <% if @notifications.exists? %>
      <tr>
        <th>
          <%= link_to end_user_path(notification.visitor) do %>
            <%= attachment_image_tag visitor, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "40x40", class: "circle" %>
          <% end %>
          <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} )" %></span>
        </th>
      </tr>
    <% else %>
      <p class="text-center">通知はありません</p>
    <% end %>
  </tbody>
</table>